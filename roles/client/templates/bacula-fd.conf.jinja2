# File Daemon = FD = "client" # all the same
FileDaemon {
  # File deamon/client name
  Name = {{ client_name }}-fd
  # Where we listen for the director
  FDport = {{ bacula_fd_port }}

  # Program working directory and PID file
  WorkingDirectory = "/var/lib/bacula"
  Pid Directory = "/var/run/bacula"

  # Maximum Jobs that client can handle
  Maximum Concurrent Jobs = 2

  ###
  # Encryption
  ###

  # Enable Data Signing
  PKI Signatures = Yes
  # Enable Data Encryption
  PKI Encryption = Yes
  # Public and Private Keys
  PKI Keypair = "/etc/bacula/cert/{{ client_name }}.pem"
  # ONLY the Public Key
  PKI Master Key = "/etc/bacula/cert/master.cert"
}

# List Directors who are permitted to contact this File daemon
Director {
  # Director name (must match the configuration of the director)
  Name = {{ dir_name }}
  # Password set in the director conf for this FD/client
  Password = {{ client_password }}
}

# Send all messages except skipped files back to Director
Messages {
  Name = Standard
  director = {{ dir_name }} = all, !skipped, !restored
}
